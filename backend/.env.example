# Backend Configuration - Golang Fiber + Python Flask

# GOLANG FIBER SERVER
FIBER_PORT=3001
FIBER_ENV=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3000

# PYTHON FLASK AI BRIDGE
FLASK_PORT=5000
FLASK_DEBUG=true
FLASK_ENV=development

# SERVICE COMMUNICATION
PYTHON_SERVICE_URL=http://localhost:5000
GOLANG_SERVICE_URL=http://localhost:3001

# LLM CONFIGURATION
PRIMARY_LLM=deepseek

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# DeepSeek API (OpenAI-compatible)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# FEATURE FLAGS
ENABLE_IMAGE_DETECTION=true
ENABLE_STREAMING=true
ENABLE_RATE_LIMITING=true

# DATABASE
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=xionco_furniture
DB_USER=furniture_user
DB_PASSWORD=secure_password

# REDIS CACHE
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# LOGGING
LOG_LEVEL=INFO
LOG_FORMAT=json

# SECURITY
JWT_SECRET=your_jwt_secret_key_here
API_KEY_REQUIRED=false
ENABLE_CORS=true

# RATE LIMITING
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900  # 15 minutes

# TIMEOUT SETTINGS
API_TIMEOUT=30
CHAT_TIMEOUT=60
IMAGE_PROCESSING_TIMEOUT=120
