<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Store Admin & Chatbot</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <div class="nav-brand">
        <h1>ğŸª Store Management System</h1>
      </div>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/admin">Admin Panel</a></li>
        <li><a href="/#chatbot">Chatbot</a></li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div class="hero">
      <h2>Welcome to Store Management System</h2>
      <p>Manage purchases and interact with our AI chatbot</p>
      <div class="cta-buttons">
        <a href="/admin" class="btn btn-primary">Go to Admin Panel</a>
        <a href="/#chatbot" class="btn btn-secondary">Chat with AI</a>
      </div>
    </div>

    <!-- Chatbot Section -->
    <div id="chatbot" class="chatbot-section">
      <div class="chatbot-container">
        <div class="chatbot-header">
          <h3>ğŸ¤– AI Shopping Assistant</h3>
          <p>Ask about our products or get shopping recommendations</p>
        </div>
        
        <div class="chat-box">
          <div id="chatMessages" class="chat-messages"></div>
          <div class="chat-input-group">
            <input 
              type="text" 
              id="chatInput" 
              placeholder="Ask me anything about our products..."
              onkeypress="handleChatKeypress(event)"
            >
            <button onclick="sendChatMessage()" class="btn btn-small">Send</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/chatbot.js"></script>
</body>
</html>
