<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel - Store Management</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav class="navbar">
      <div class="container">
        <div class="nav-brand">
        <h1>ðŸ“¦ Xionco Furniture - Admin Panel</h1>
      </div>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/admin">Dashboard</a></li>

    <div class="admin-container">
      <div class="admin-header">
      <h2>Manajemen Pesanan Furnitur</h2>
      <div class="admin-stats">
        <div class="stat-card">
          <h4>Total Furnitur</h4>
          <p id="totalProducts"><%= products.length %></p>
        </div>
        <div class="stat-card">
          <h4>Pesanan Pending</h4>
          <p id="pendingPurchases"><%= purchases.filter(p => p.status === 'pending').length %></p>
        </div>
        <div class="stat-card">
          <h4>Total Pesanan</h4>
          </div>
        </div>
      </div>

      <div class="admin-content">
        <!-- New Purchase Section -->
        <div class="section">
          <h3>Tambah Pesanan Baru</h3>
          <form id="purchaseForm" class="form-group">
            <div class="form-row">
              <div class="form-field">
                <label>Pilih Furnitur:</label>
                <select id="productSelect" required>
                  <option value="">-- Pilih Furnitur --</option>
                  <% products.forEach(product => { %>
                  <option value="<%= product.id %>"><%= product.name %> (Rp<%= product.price.toLocaleString() %>)</option>
                  <% }); %>
                </select>
              </div>
              <div class="form-field">
                <label>Jumlah:</label>
                <input type="number" id="quantity" min="1" required placeholder="Masukkan jumlah" />
              </div>
              <div class="form-field">
                <label>Stok Tersedia:</label>
                <input type="text" id="stockInfo" disabled placeholder="Info stok" />
              </div>
            </div>
            <button type="submit" class="btn btn-success">Buat Pesanan</button>
          </form>
        </div>

        <!-- Products Section -->
        <div class="section">
          <h3>Koleksi Furnitur & Stok</h3>
          <div class="table-container">
            <table class="data-table">
              <thead>
                <tr>
                  <th>Nama Furnitur</th>
                  <th>Deskripsi</th>
                  <th>Kategori</th>
                  <th>Harga</th>
                  <th>Stok</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody id="productsTable">
                <% products.forEach(product => { %>
                <tr>
                  <td><%= product.name %></td>
                  <td><%= product.description %></td>
                  <td><span class="category-badge"><%= product.category || 'Umum' %></span></td>
                  <td>Rp<%= product.price.toLocaleString() %></td>
                  <td>
                    <span class="stock-badge" data-product-id="<%= product.id %>"> Loading... </span>
                  </td>
                  <td><span class="status-badge status-active">Tersedia</span></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Purchases Section -->
        <div class="section">
          <h3>Riwayat Pesanan</h3>
          <div class="purchase-filters">
            <button onclick="filterPurchases('all')" class="filter-btn active">Semua</button>
            <button onclick="filterPurchases('pending')" class="filter-btn">Pending</button>
            <button onclick="filterPurchases('confirmed')" class="filter-btn">Terkonfirmasi</button>
            <button onclick="filterPurchases('cancelled')" class="filter-btn">Dibatalkan</button>
          </div>
          <div class="table-container">
            <table class="data-table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Furnitur</th>
                  <th>Jumlah</th>
                  <th>Total Harga</th>
                  <th>Status</th>
                  <th>Tanggal</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody id="purchasesTable">
                <% purchases.forEach(purchase => { const product = products.find(p => p.id === purchase.product_id); %>
                <tr class="purchase-row" data-status="<%= purchase.status %>">
                  <td>#<%= purchase.id %></td>
                  <td><%= product ? product.name : 'Tidak Ditemukan' %></td>
                  <td><%= purchase.quantity %></td>
                  <td>Rp<%= purchase.total_price.toLocaleString() %></td>
                  <td>
                    <span class="status-badge status-<%= purchase.status %>"> <%= purchase.status === 'pending' ? 'PENDING' : purchase.status === 'confirmed' ? 'TERKONFIRMASI' : 'DIBATALKAN' %> </span>
                  </td>
                  <td><%= new Date(purchase.created_at).toLocaleDateString('id-ID') %></td>
                  <td>
                    <div class="action-buttons">
                      <% if (purchase.status === 'pending') { %>
                      <button onclick="confirmPurchase(<%= purchase.id %>)" class="btn btn-small btn-success">Konfirmasi</button>
                      <button onclick="cancelPurchase(<%= purchase.id %>)" class="btn btn-small btn-danger">Batalkan</button>
                      <% } else { %>
                      <span class="text-muted">-</span>
                      <% } %>
                    </div>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/admin.js"></script>
  </body>
</html>
