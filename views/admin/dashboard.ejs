<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - Store Management</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <div class="nav-brand">
        <h1>ðŸ“Š Admin Panel</h1>
      </div>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/admin">Admin Panel</a></li>
      </ul>
    </div>
  </nav>

  <div class="admin-container">
    <div class="admin-header">
      <h2>Purchase Management Dashboard</h2>
      <div class="admin-stats">
        <div class="stat-card">
          <h4>Total Products</h4>
          <p id="totalProducts"><%= products.length %></p>
        </div>
        <div class="stat-card">
          <h4>Pending Purchases</h4>
          <p id="pendingPurchases"><%= purchases.filter(p => p.status === 'pending').length %></p>
        </div>
        <div class="stat-card">
          <h4>Total Purchases</h4>
          <p id="totalPurchases"><%= purchases.length %></p>
        </div>
      </div>
    </div>

    <div class="admin-content">
      <!-- New Purchase Section -->
      <div class="section">
        <h3>Add New Purchase</h3>
        <form id="purchaseForm" class="form-group">
          <div class="form-row">
            <div class="form-field">
              <label>Select Product:</label>
              <select id="productSelect" required>
                <option value="">-- Select Product --</option>
                <% products.forEach(product => { %>
                  <option value="<%= product.id %>"><%= product.name %> ($<%= product.price %>)</option>
                <% }); %>
              </select>
            </div>
            <div class="form-field">
              <label>Quantity:</label>
              <input type="number" id="quantity" min="1" required placeholder="Enter quantity">
            </div>
            <div class="form-field">
              <label>Available Stock:</label>
              <input type="text" id="stockInfo" disabled placeholder="Stock info">
            </div>
          </div>
          <button type="submit" class="btn btn-success">Create Purchase</button>
        </form>
      </div>

      <!-- Products Section -->
      <div class="section">
        <h3>Products & Stock</h3>
        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody id="productsTable">
              <% products.forEach(product => { %>
                <tr>
                  <td><%= product.name %></td>
                  <td><%= product.description %></td>
                  <td>$<%= product.price.toLocaleString() %></td>
                  <td>
                    <span class="stock-badge" data-product-id="<%= product.id %>">
                      Loading...
                    </span>
                  </td>
                  <td><span class="status-badge status-active">Active</span></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Purchases Section -->
      <div class="section">
        <h3>Purchase History</h3>
        <div class="purchase-filters">
          <button onclick="filterPurchases('all')" class="filter-btn active">All</button>
          <button onclick="filterPurchases('pending')" class="filter-btn">Pending</button>
          <button onclick="filterPurchases('confirmed')" class="filter-btn">Confirmed</button>
          <button onclick="filterPurchases('cancelled')" class="filter-btn">Cancelled</button>
        </div>
        <div class="table-container">
          <table class="data-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Status</th>
                <th>Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="purchasesTable">
              <% purchases.forEach(purchase => { 
                const product = products.find(p => p.id === purchase.product_id);
              %>
                <tr class="purchase-row" data-status="<%= purchase.status %>">
                  <td>#<%= purchase.id %></td>
                  <td><%= product ? product.name : 'Unknown' %></td>
                  <td><%= purchase.quantity %></td>
                  <td>$<%= purchase.total_price.toLocaleString() %></td>
                  <td>
                    <span class="status-badge status-<%= purchase.status %>">
                      <%= purchase.status.toUpperCase() %>
                    </span>
                  </td>
                  <td><%= new Date(purchase.created_at).toLocaleDateString() %></td>
                  <td>
                    <div class="action-buttons">
                      <% if (purchase.status === 'pending') { %>
                        <button onclick="confirmPurchase(<%= purchase.id %>)" class="btn btn-small btn-success">Confirm</button>
                        <button onclick="cancelPurchase(<%= purchase.id %>)" class="btn btn-small btn-danger">Cancel</button>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/admin.js"></script>
</body>
</html>
