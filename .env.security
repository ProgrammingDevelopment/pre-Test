# Xionco Furniture Security Environment Configuration

# ============================================
# GENERAL SETTINGS
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# HTTPS & TLS CONFIGURATION
# ============================================
# Set to 'production' to enforce HTTPS
# HTTPS_ENABLED=true
# HTTPS_PORT=443
# HSTS_MAX_AGE=31536000    # 1 year in seconds
# HSTS_INCLUDE_SUBDOMAINS=true
# HSTS_PRELOAD=true

# ============================================
# RSA-4096 KEY PATHS
# ============================================
# Auto-generated on first startup
# RSA_PUBLIC_KEY_PATH=./certs/rsa-public.pem
# RSA_PRIVATE_KEY_PATH=./certs/rsa-private.pem

# ============================================
# SECURITY HEADERS
# ============================================
# CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'
# X_FRAME_OPTIONS=DENY
# X_CONTENT_TYPE_OPTIONS=nosniff
# REFERRER_POLICY=strict-origin-when-cross-origin

# ============================================
# OBFUSCATION SETTINGS
# ============================================
# MINIFY_JS=true
# OBFUSCATE_CODE=true
# ANTI_DEBUG_ENABLED=true

# ============================================
# CLOUDFLARE CONFIGURATION
# ============================================
# CLOUDFLARE_ZONE_ID=your_zone_id
# CLOUDFLARE_API_TOKEN=your_api_token
# CLOUDFLARE_DOMAIN=yourdomain.com
# CLOUDFLARE_WAF_ENABLED=false  # Set to true after Cloudflare setup

# ============================================
# RATE LIMITING
# ============================================
# RATE_LIMIT_WINDOW=60000        # 1 minute in milliseconds
# RATE_LIMIT_MAX_REQUESTS=100    # Max requests per window
# RATE_LIMIT_API_MAX=50          # Max API requests per window

# ============================================
# SECURITY KEYS & TOKENS
# ============================================
# API_KEY_SECRET=your_secret_key_here
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here

# ============================================
# AI CHATBOT CONFIGURATION (from previous setup)
# ============================================
AI_API=deepseek
DEEPSEEK_API_KEY=sk-your_deepseek_key_here
GOOGLE_GEMINI_API_KEY=your_gemini_key_here
OPENAI_API_KEY=your_openai_key_here
OLLAMA_API_URL=http://localhost:11434

# ============================================
# DATABASE (SQLite)
# ============================================
DB_PATH=./data/store.db
DB_BACKUP_PATH=./backups/

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ============================================
# BACKUP & RECOVERY
# ============================================
# BACKUP_ENABLED=true
# BACKUP_INTERVAL=daily     # daily, weekly, monthly
# BACKUP_RETENTION_DAYS=30

# ============================================
# SECURITY FEATURES FLAGS
# ============================================
# Enable all security features in production
SECURITY_FEATURES_ENABLED=true
SSL_CERT_PATH=./certs/certificate.pem
SSL_KEY_PATH=./certs/private-key.pem
